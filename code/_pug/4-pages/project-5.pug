include ../1-base/_mixins
include ../3-modules/_header
include ../3-modules/_footer

mixin lang-section-project-5(lang)
	section#project-5(class = "lang-section "+lang)
		+updown-arrows()
		.wrapper
			+cube-container-placeholder(1)
			+cube-container-content(lang, 2, 5, 1)
			+cube-container-content(lang, 3, 5, 2)
			+cube-container-content(lang, 4, 5, 3)
			+cube-container-content(lang, 5, 5, 4)
			+cube-container-content(lang, 6, 5, 5)
			+cube-container-content(lang, 7, 5, 6)
			+cube-container-content(lang, 8, 5, 7)
			+cube-container-placeholder(9)

.page-wrapper.load
	+background-project-info(5, 'Eng')
	+background-project-info(5, 'Rus')
	.content-wrapper.load
		+header
		+lang-section-project-5("Eng")
		+lang-section-project-5("Rus")
		//- +footer
